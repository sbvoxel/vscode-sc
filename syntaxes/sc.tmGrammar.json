{
    "scopeName": "source.sc",
	"patterns": [
        {
            "name": "keyword.control",
            "match": "\\b(if|else|orelse|static|while|for)\\b"
        },
        {
            "name": "keyword.control",
            "match": "\\b(return|break|continue|yield|defer)\\b"
        },
        {
            "name": "keyword.control",
            "match": "\\b(switch|case|default)\\b"
        },
        {
            "name": "keyword",
            "match": "\\b(pub|fn|use|import|interface|trait|abort|assert|check)\\b"
        },
        {
            "name": "storage.type.struct",
            "match": "\\b(enum|struct|class|union)\\b"
        },
        {
            "name": "storage.type.primitive",
            "match": "\\b(never|void|i8|i16|i32|i64|int|u8|u16|u32|u64|uint|f32|f64|bool)\\b"
        },
        {
            "name": "keyword.other",
            "match": "\\b(const|extern|packed|export|pub|inline|let|var|volatile|align)\\b"
        },
        {
            "name": "constant.numeric.decimal",
            "match": "\\b[0-9]+(\\.[0-9_]+)?([eE][+-]?[0-9]+)?\\b"
        },
        {
            "name": "constant.numeric.hexadecimal",
            "match": "\\b0x[a-fA-F0-9]+(\\.[a-fA-F0-9]+)?([pP][+-]?[0-9]+)?\\b"
        },
        {
            "name": "constant.numeric.octal",
            "match": "\\b0o[0-7]+\\b"
        },
        {
            "name": "constant.numeric.binary",
            "match": "\\b0b[01]+(\\.[01]+)?([eE][+-]?[0-9]+)?\\b"
        },
        {
            "name": "constant",
            "match": "\\b(true|false|null|undefined)\\b"
        },
        {
            "name": "comment.line",
            "match": "//.*$"
        },
        {
            "name": "string.quoted.single",
            "begin": "'",
            "end": "'"
        },
        {
            "name": "string.quoted.double",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape",
                    "match": "\\\\."
                }
            ]
        }
	]
}
